<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".controllers.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="25dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back" />
        <TextView
            android:id="@+id/textLogin"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Register"
            android:textSize="23sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/cube_blue" />

    <TextView
        android:id="@+id/tvRegisterEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        android:text="Email"/>

    <EditText
        android:id="@+id/ipRegisterEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="16dp"/>

    <TextView
        android:id="@+id/tvRegisterPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        android:text="Password"/>

    <EditText
        android:id="@+id/ipRegisterPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="16dp"/>

    <TextView
        android:id="@+id/tvConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        android:text="Confirm password"/>

    <EditText
        android:id="@+id/ipConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:padding="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="16dp"/>

    <Button
        android:id="@+id/btRegisterToHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:padding="12dp"
        android:text="Register"
        android:backgroundTint="#1854fc"/>


    <View
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or register with"
        android:layout_margin="16dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!--        <ImageView-->
        <!--            android:id="@+id/icFacebook"-->
        <!--            -->
        <!--            android:layout_width="80dp"-->
        <!--            android:layout_height="80dp"-->
        <!--            android:padding="12dp"-->
        <!--            android:backgroundTint="#d8dce4"-->
        <!--            android:textColor="@color/black"-->
        <!--            app:srcCompat="@drawable/facebook"/>-->

        <ImageView
            android:id="@+id/icGoogle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:padding="12dp"
            android:backgroundTint="#d8dce4"
            app:srcCompat="@drawable/google"/>

    </LinearLayout>


</LinearLayout>