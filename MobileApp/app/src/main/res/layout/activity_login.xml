<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".controllers.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="25dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back" />
        <TextView
            android:id="@+id/textLogin"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Login"
            android:textSize="23sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/cube_blue" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        android:text="Email"/>

    <EditText
        android:id="@+id/ipLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="16dp"/>

    <TextView
        android:id="@+id/tvPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        android:text="Password"/>

    <EditText
        android:id="@+id/ipPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:padding="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_edittext"
        android:drawablePadding="16dp"/>

    <TextView
        android:id="@+id/tvForgotPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        android:text="Forgot password?"
        android:gravity="end"/>

    <Button
        android:id="@+id/btLogintoHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"

        android:padding="12dp"
        android:text="Login"
        android:backgroundTint="#1854fc" />


    <View
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or Login with"
        android:layout_margin="25dp"

        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!--        <ImageView-->
        <!--            android:id="@+id/icFacebookLogin"-->
        <!--            android:layout_width="80dp"-->
        <!--            android:layout_height="80dp"-->
        <!--            android:padding="12dp"-->
        <!--            android:backgroundTint="#d8dce4"-->
        <!--            android:textColor="@color/black"-->
        <!--            app:srcCompat="@drawable/facebook"/>-->

        <ImageView
            android:id="@+id/icGoogleLogin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:padding="12dp"
            android:backgroundTint="#d8dce4"
            app:srcCompat="@drawable/google"/>

    </LinearLayout>




</LinearLayout>